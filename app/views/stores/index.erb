<div class="container">

  <h1>The Stores you frequent: </h1>

  <div class="row">

    <% @stores.each do |store| %>
      <div class="col s4">
        <div class="card small">
          <div class="card-content">
            <span class="card-title"><a href="/stores/<%= store.id %>"><%= store.name %></a></span>
          </div>
          <div class="card-action">
            <!-- TODO I need to complete the edit and delete portion for the store -->
            <a href="#" class="store_card_link">Edit this store</a>
            <a href="/stores/<%= store.id %>/delete" class="store_card_link">Delete this store</a>
          </div>
        </div>
      </div>
    <% end %>

  </div><!-- .row -->

</div><!-- .container -->
